
<!DOCTYPE html>
<html>
  <head>
    <title>FinalProject</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  
    <p class="navbar-text float-right">
<% if developer_signed_in? %>
  Logged in as <strong><%= current_developer.email %></strong>.
  <%= link_to 'Edit profile', edit_developer_registration_path, :class => 'navbar-link' %> |
  <%= link_to "Logout", destroy_developer_session_path, method: :delete, :class => 'navbar-link'  %>
<% else %>
  <%= link_to "Sign up", new_developer_registration_path, :class => 'navbar-link'  %> |
  <%= link_to "Login", new_developer_session_path, :class => 'navbar-link'  %>
<% end %>
</p>

  </head>

  <body>

<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>
    
    <%= yield %>
  </body>
</html>
